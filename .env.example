# Resonance Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Required Variables
# ===================

# PostgreSQL password (generate a strong random password)
POSTGRES_PASSWORD=your_secure_password_here

# JWT secret for authentication (generate a long random string)
JWT_SECRET=your_jwt_secret_here

# Meilisearch master key (generate a strong random string)
MEILISEARCH_KEY=your_meilisearch_key_here

# Lidarr integration
LIDARR_URL=http://localhost:8686
LIDARR_API_KEY=your_lidarr_api_key

# Path to your music library on the host
MUSIC_LIBRARY_PATH=/path/to/your/music/library

# ===================
# Optional Variables
# ===================

# Server port (default: 8080)
PORT=8080

# PostgreSQL settings (defaults are usually fine)
POSTGRES_USER=resonance
POSTGRES_DB=resonance

# Meilisearch environment (development or production)
MEILI_ENV=production

# Ollama model to use for AI features (default: mistral)
OLLAMA_MODEL=mistral

# Rust log level (default: info)
# Options: trace, debug, info, warn, error
RUST_LOG=info

# ===================
# External Integrations
# ===================

# ListenBrainz scrobbling (optional)
LISTENBRAINZ_API_KEY=

# Discord Rich Presence (optional)
DISCORD_CLIENT_ID=
